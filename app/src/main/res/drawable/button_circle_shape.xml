            <!--边框角度-->
            <gradient android:startColor="#990EF7" android:endColor="#E116FD"
                android:angle="180" />
            <corners android:radius="10dip" />
            <!--外边框颜色，这个为内部颜色-->

        </shape>
    </item>
</layer-list>